<div class="page-header">
    <h1>Admin Dashboard</h1>
    <p>Manage your store and monitor activity</p>
</div>

<!-- Statistics (Admin Only) -->
<div class="stats">
    <div class="stat">
        <div class="stat-number"><%= stats.orders %></div>
        <div class="stat-label">Total Orders</div>
    </div>
    <div class="stat">
        <div class="stat-number">$<%= parseFloat(stats.revenue || 0).toFixed(2) %></div>
        <div class="stat-label">Total Revenue</div>
    </div>
    <div class="stat">
        <div class="stat-number"><%= stats.products %></div>
        <div class="stat-label">Products</div>
    </div>
    <div class="stat">
        <div class="stat-number"><%= stats.users %></div>
        <div class="stat-label">Users</div>
    </div>
</div>

<!-- Recent Orders Section (Admin Only) -->
<h2 style="margin: 2.5rem 0 1rem 0; font-size: 1.75rem;">Recent Orders</h2>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Customer</th>
            <th>Total</th>
            <th>Status</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        <% if (typeof recentOrders !== 'undefined' && recentOrders.length > 0) { %>
            <% recentOrders.forEach(order => { %>
            <tr>
                <td>#<%= order.id %></td>
                <td><%= order.customer_name %></td>
                <td>$<%= parseFloat(order.total_amount).toFixed(2) %></td>
                <td><span class="status-badge status-<%= order.status.toLowerCase() %>"><%= order.status %></span></td>
                <td><%= new Date(order.created_at).toLocaleDateString() %></td>
            </tr>
            <% }); %>
        <% } else { %>
            <tr><td colspan="5" style="text-align: center; padding: 2rem; color: var(--text-secondary);">No orders yet</td></tr>
        <% } %>
    </tbody>
</table>

<!-- Admin Actions -->
<div class="admin-actions">
    <a href="/admin/products" class="btn">Manage Products</a>
    <a href="/admin/categories" class="btn">Manage Categories</a>
    <a href="/admin/advertisements" class="btn">Manage Advertisements</a>
    <a href="/admin/orders" class="btn">Manage Orders</a>
    <a href="/admin/users" class="btn">Manage Users</a>
</div>

