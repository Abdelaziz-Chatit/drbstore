
<div class="auth-container">
    <h1 class="auth-title">Create Account</h1>
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="auth-error"><%= error %></div>
    <% } %>
    <form method="POST" action="/auth/register" class="auth-form">
        <div class="form-field">
            <label for="name">Full Name *</label>
            <input type="text" id="name" name="name" required placeholder="Enter your full name">
        </div>
        <div class="form-field">
            <label for="email">Email Address *</label>
            <input type="email" id="email" name="email" required placeholder="your.email@example.com">
        </div>
        <div class="form-field">
            <label for="phone">Phone Number (optional)</label>
            <input type="text" id="phone" name="phone" placeholder="(555) 123-4567">
        </div>
        <div class="form-field">
            <label for="password">Password *</label>
            <input type="password" id="password" name="password" required minlength="6" placeholder="Minimum 6 characters">
            <small style="color: var(--text-secondary); margin-top: 0.5rem; display: block;">Must be at least 6 characters</small>
        </div>
        <button type="submit" class="auth-button">Register</button>
    </form>
    <div class="auth-footer">
        <p>Already have an account? <a href="/auth/login">Sign in here</a></p>
    </div>
</div>

