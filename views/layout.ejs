<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'DRB Store' %> - Premium E-Commerce</title>
    <link rel="stylesheet" href="/css/style.css">
    <meta name="description" content="DRB Store - Your premium destination for quality products">
</head>
<body>
    <header>
        <nav>
            <a href="/" class="nav-brand">âš¡ DRB Store</a>
            <div class="nav-links">
                <a href="/">Home</a>
                <a href="/products">Products</a>
                <a href="/cart" style="position: relative;">
                    ðŸ›’ Cart
                    <% if (typeof cartCount !== 'undefined' && cartCount > 0) { %>
                        <span class="cart-badge"><%= cartCount %></span>
                    <% } %>
                </a>
                <% if (typeof user !== 'undefined' && user) { %>
                    <a href="/auth/profile">ðŸ‘¤ <%= user.name %></a>
                    <% if (user.roles && (user.roles.includes('ROLE_ADMIN') || user.roles.includes('ROLE_RESPONSABLE'))) { %>
                        <a href="<% if (user.roles.includes('ROLE_ADMIN')) { %>/admin<% } else { %>/admin/manager-dashboard<% } %>">ðŸ“Š <%= user.roles.includes('ROLE_ADMIN') ? 'Admin' : 'Manager' %></a>
                    <% } %>
                    <a href="/auth/logout">Logout</a>
                <% } else { %>
                    <a href="/auth/login">Login</a>
                    <a href="/auth/register">Register</a>
                <% } %>
            </div>
        </nav>
    </header>

    <main>
        <%- body %>
    </main>

    <footer>
        <p>&copy; <%= new Date().getFullYear() %> DRB Store - Premium Products | Built with Node.js & Express</p>
        <p style="margin-top: 1rem; opacity: 0.8; font-size: 0.9rem;">All rights reserved</p>
    </footer>

    <script src="/js/cart.js"></script>
</body>
</html>

